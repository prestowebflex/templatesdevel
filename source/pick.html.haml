-content_for :assets do
  = stylesheet_link_tag "pickabox"
  = javascript_include_tag  "pickabox"
%p Page content
%div{data:{role:"navbar"},style:"margin-left: -15px; margin-right: -15px;"}
  %ul
    %li
      %a.ui-btn-active{href:"#"} Pick a box
    %li
      %a{href:"#"} Coupons (5)
%div.ui-grid-c
  -4.times.each do
    -('a'..'d').each do |letter|
      %div{class: "ui-block-#{letter}", style: "padding-bottom: 25%; position: relative; overflow: hidden;"}
        .ui-bar.ui-bar-e{style:"position: absolute; top:0; left:0; right: 0; bottom: 0;"}
          %div CONTENT
